<form action="/shorten-urls" method="post">
  <h4 class="my-3 text-center">指定網址：</h4>
  <div class="row justify-content-center">
    <div class="input-group w-75 m-2">
      <input type="text" name="website" class="form-control ml-1" placeholder="{{URL}}" aria-label="website" disabled>
    </div>
  </div>
</form>
<a href="/{{shortID}}">
  <div class="url-text text-center">
    <h4 id="shortenURL" style="display: inline;">
      {{shortURL}}
    </h4>
  </div>
</a>


<div class="shorten text-center">
  <button class="btn btn-success p-3 m-1" id="copy-button" onclick="copy()">
    複製連結
  </button>
  <a href="/">
    <button class="btn btn-primary p-3 m-1" type="submit" id="goBack-button">
      回到首頁
    </button>
  </a>
  <script>
    function copy() {
      const shortenURL = document.getElementById("shortenURL")
      navigator.clipboard.writeText(shortenURL.innerText.trim())
        .then(() => alert('copied'))
        .catch(error => console.log(error))
    }
  </script>
</div>